{
    "manifest_version": 2,
    "name": "Crunchyroll Subtitles",
    "version": "0.1",
    "description": "A chrome extension for adding unsupported subtitles to videos.",
    "permissions":[
        "webRequest",
        "webRequestBlocking",
        "*://www.crunchyroll.com/*",
        "*://a-vrv.akamaized.net/*",
        "*://dl.v.vrv.co/*",
        "activeTab", 
        "declarativeContent",
        "storage"
        ],
    "background": {
        "scripts":["background.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16simple.png",
            "32": "images/icon32simple.png",
            "64": "images/icon64simple.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16simple.png",
        "32": "images/icon32simple.png",
        "64": "images/icon64simple.png",
        "128": "images/icon128.png"
    }
}